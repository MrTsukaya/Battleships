<Window x:Class="Battleships.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleships"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Width" Value="400"/>
                <Setter Property="Height" Value="75"/>
                <Setter Property="Background" Value="Cyan"/>
                <Setter Property="Margin" Value="0 25 0 0"/>
            </Style>
        </Grid.Resources>
        <StackPanel>
            <TextBlock Text="{Binding Settings.width}"/>
            <TextBlock Text="{Binding Settings.height}"/>
            <TextBlock Text="{Binding Settings.fullscreen}"/>
            <TextBlock Text="{Binding Settings.volume}"/>
        </StackPanel>
    </Grid>
</Window>
